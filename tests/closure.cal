
function createCounter (n)
  i = 0
  function fn ()
    if i >= n then
      return false
    else
      i = i + 1
      return true
    end
  end
  return fn
end


counter = createCounter(10)
while counter() do
  counter2 = createCounter(5)
  while counter2() do
    print("  Counter 2\n")
  end
  print("Counter\n")
end

